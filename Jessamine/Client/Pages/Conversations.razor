@page "/conversations/{ConversationId:long?}"

@using Jessamine.Client.State.Conversation

@inject IState<ConversationState> _conversationState
@inject IDispatcher _dispatcher

<h3>Conversations</h3>
<span>@ConversationId</span>

<div class="row rounded-lg overflow-hidden shadow">
  <!-- Users box-->
  <div class="col-5 px-0">
    <div class="bg-white">

      <div class="bg-gray px-4 py-2 bg-light">
        <p class="h5 mb-0 py-1">Recent</p>
      </div>

      <div class="messages-box">
        <div class="list-group rounded-0">
          @foreach (var conversation in _conversationState.Value.Conversations)
          {
            <a href="#" id="@conversation.Id" class="list-group-item list-group-item-action list-group-item-light rounded-0">
              <div class="media">
                <img src="https://res.cloudinary.com/mhmd/image/upload/v1564960395/avatar_usae7z.svg" alt="user" width="50" class="rounded-circle">
                <div class="media-body ml-4">
                  <div class="d-flex align-items-center justify-content-between mb-1">
                    <h6 class="mb-0">@conversation.ParticipantName</h6><small class="small font-weight-bold">@conversation.LastMessageDate</small>
                  </div>
                  <p class="font-italic text-muted mb-0 text-small">@conversation.LastMessage</p>
                </div>
              </div>
            </a>
          }

          <a class="list-group-item list-group-item-action active text-white rounded-0">
            <div class="media">
              <img src="https://res.cloudinary.com/mhmd/image/upload/v1564960395/avatar_usae7z.svg" alt="user" width="50" class="rounded-circle">
              <div class="media-body ml-4">
                <div class="d-flex align-items-center justify-content-between mb-1">
                  <h6 class="mb-0">Jason Doe</h6><small class="small font-weight-bold">25 Dec</small>
                </div>
                <p class="font-italic mb-0 text-small">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore.</p>
              </div>
            </div>
          </a>

        </div>
      </div>
    </div>
  </div>
</div>
