@page "/conversations/{ConversationId:long?}"

@using Jessamine.Client.State.Conversation
@using Jessamine.Client.State.Conversation.Actions

@attribute [Authorize]
@inject IState<ConversationState> _conversationState
@inject IDispatcher _dispatcher
@inject AuthenticationStateProvider AuthenticationStateProvider

@implements IAsyncDisposable

@inherits FluxorComponent

<h3>Conversations</h3>
<span>@ConversationId</span>

<div class="row rounded-lg shadow rounded">
  <!-- Users box-->
  <div class="col-3 px-1">
    <div class="bg-white">

      <div class="bg-gray px-4 py-2 bg-light">
        <p class="h5 mb-0 py-1">Recent</p>
      </div>

      <div class="messages-box">
        <div class="list-group rounded-0">
          @foreach (var conversation in _conversationState.Value.Conversations)
          {
            if (conversation.Id == _conversationState.Value.SelectedConversationId)
            {
              <a id="@conversation.Id" class="list-group-item list-group-item-action active text-white rounded-0">
                <div class="media">
                  <i class="fas fa-user-circle fa-2x"></i>
                  <div class="media-body ml-4">
                    <div class="d-flex align-items-center justify-content-between mb-1">
                      <h6 class="mb-0">@conversation.ParticipantName</h6><small class="small font-weight-bold">@conversation.LastMessageDate</small>
                    </div>
                    <p class="font-italic mb-0 text-small">@conversation.LastMessage</p>
                  </div>
                </div>
              </a>
            }
            else
            {
              <a id="@conversation.Id" @onclick="() => SelectConversation(conversation.Id)" class="list-group-item list-group-item-action list-group-item-light rounded-0">
                <div class="media">
                  <i class="fas fa-user-circle fa-2x"></i>
                  <div class="media-body ml-4">
                    <div class="d-flex align-items-center justify-content-between mb-1">
                      <h6 class="mb-0">@conversation.ParticipantName</h6><small class="small font-weight-bold">@conversation.LastMessageDate</small>
                    </div>
                    <p class="font-italic text-muted mb-0 text-small">@conversation.LastMessage</p>
                  </div>
                </div>
              </a>
            }
          }
        </div>
      </div>
    </div>
  </div>
  <div class="col-9 px-1">
    <Messenger OnClick="Send" UserName="@_userName" ParticipantName="@_conversationState.Value.SelectedConversation.ParticipantName" />
  </div>
</div>

